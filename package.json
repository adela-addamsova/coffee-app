    "build": "tsc -p server",
    "dev:all": "concurrently --raw -k -s first -n CLIENT,SERVER \"npm run dev --prefix client\" \"cross-env NODE_ENV=test DATABASE_URL=postgres://postgres:pernicek@localhost:5432/coffee-app-test-db npm run dev --prefix server\""
