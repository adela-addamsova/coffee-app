{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "../",
    "baseUrl": "../",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": [
        "server/*"
      ],
      "@db/*": [
        "server/db/*"
      ],
      "@routes/*": [
        "server/routes/*"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "../server/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../client",
    "tests"
  ]
}